<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HomeActivity">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <Space
          android:layout_width="match_parent"
          android:layout_height="5dp"/>

      <Button
          android:layout_margin="10dp"
          android:layout_gravity="end"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:id="@+id/logoutButton"
          android:background="@drawable/button_danger"
          android:foreground="@drawable/ic_power_settings"
          android:foregroundTint="@color/colorSecondary"/>

      <Space
          android:layout_width="match_parent"
          android:layout_height="5dp"/>

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="200dp"
          app:srcCompat="@mipmap/ic_launcher_round"
          android:id="@+id/imageView"
          android:elevation="20dp"
          android:scaleType="fitCenter"
          android:contentDescription="@string/logo"/>

      <TextView
          android:text="@string/app_name"
          android:gravity="center"
          android:textColor="@color/textPrimary"
          android:textSize="25sp"
          android:textStyle="bold"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

      <Space
          android:layout_width="match_parent"
          android:layout_height="5dp"/>

      <LinearLayout
          android:background="@drawable/card_primary"
          android:layout_margin="10dp"
          android:padding="10dp"
          android:elevation="10dp"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <TextView
            android:text="@string/description_deposit"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <TextView
              android:textColor="@color/textPrimary"
              android:hint="@string/wallet"
              android:gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/textViewWallet"
              android:layout_weight="1"/>

          <Space
              android:layout_width="10dp"
              android:layout_height="wrap_content"/>

          <Button
              android:background="@drawable/button_info"
              android:textColor="@color/textSecondary"
              android:text="@string/copy"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/buttonCopy"
              android:layout_weight="0.1"/>

        </LinearLayout>

      </LinearLayout>

      <Space
          android:layout_width="match_parent"
          android:layout_height="5dp"/>

      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:background="@drawable/card_primary"
          android:layout_margin="10dp"
          android:padding="10dp"
          android:elevation="10dp">

        <TextView
            android:text="@string/email"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewEmail"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <TextView
            android:text="@string/minimum"
            android:gravity="start"
            android:textColor="@color/textPrimary"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <TextView
            android:text="@string/minimum"
            android:gravity="start"
            android:textColor="@color/textPrimary"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMaxDeposit"/>

      </LinearLayout>

      <Space
          android:layout_width="match_parent"
          android:layout_height="5dp"/>

      <LinearLayout
          android:id="@+id/linearLayoutRefreshBalance"
          android:background="@drawable/card_primary"
          android:layout_marginTop="5dp"
          android:layout_marginStart="20dp"
          android:layout_marginEnd="20dp"
          android:layout_marginBottom="5dp"
          android:padding="15dp"
          android:elevation="5dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <TextView
            android:text="@string/balance"
            android:textColor="@color/textPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/textViewBalance"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            app:srcCompat="@drawable/ic_repeat"
            android:contentDescription="@string/logo"/>

      </LinearLayout>

      <Space
          android:layout_width="match_parent"
          android:layout_height="5dp"/>

      <Button
          android:layout_marginStart="30dp"
          android:layout_marginEnd="90dp"
          android:background="@drawable/button_danger"
          android:textColor="@color/textSecondary"
          android:text="@string/botFibonacci"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/buttonBotFibonacci"/>

      <Space
          android:layout_width="match_parent"
          android:layout_height="5dp"/>

      <Button
          android:layout_marginStart="90dp"
          android:layout_marginEnd="30dp"
          android:background="@drawable/button_danger"
          android:textColor="@color/textSecondary"
          android:text="@string/botProbability"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/buttonBotModeProbability"/>

      <Space
          android:layout_width="match_parent"
          android:layout_height="5dp"/>

      <Button
          android:layout_marginStart="60dp"
          android:layout_marginEnd="60dp"
          android:background="@drawable/button_danger"
          android:textColor="@color/textSecondary"
          android:text="@string/bot_web"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/buttonBotWeb"/>

      <Space
          android:layout_width="match_parent"
          android:layout_height="5dp"/>

      <LinearLayout
          android:background="@drawable/card_primary"
          android:layout_marginTop="5dp"
          android:layout_marginStart="15dp"
          android:layout_marginEnd="15dp"
          android:layout_marginBottom="10dp"
          android:padding="15dp"
          android:elevation="5dp"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <TextView
            android:text="@string/attention"
            android:textColor="@color/textPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginStart="10dp"
            android:hint="@string/description_deposit"
            android:text="@string/description_attention"
            android:textColor="@color/textPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

      </LinearLayout>

      <Space
          android:layout_width="match_parent"
          android:layout_height="50dp"/>

    </LinearLayout>

  </ScrollView>

  <android.support.design.widget.FloatingActionButton
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:clickable="true"
      android:id="@+id/floatingActionButtonCall"
      android:focusable="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:backgroundTint="@color/Danger"
      app:srcCompat="@drawable/ic_baseline"
      android:layout_marginTop="10dp"
      android:layout_marginStart="10dp"
      android:layout_marginEnd="10dp"
      android:layout_marginBottom="10dp"
      android:tint="@color/textSecondary"/>

</RelativeLayout>